---
import Container from "./Container.astro";
import ContactButton from "./ui/ContactButton.astro";
import siteConfig from "../data/site-config.json";
---

<section id="contact" class="py-20 bg-amber-50 dark:bg-neutral-900">
  <Container class="max-w-4xl mx-auto text-center">
    <div class="space-y-10">
      <!-- Título -->
      <div class="space-y-4">
        <h2 class="text-4xl md:text-5xl font-extrabold text-amber-600 dark:text-amber-400">
          Get in Touch
        </h2>
        <div class="w-24 h-1 bg-amber-500 mx-auto rounded-full"></div>
      </div>
      
      <!-- Descrição -->
      <p class="text-xl leading-relaxed text-neutral-700 dark:text-neutral-300 max-w-2xl mx-auto">
        My inbox is always open. Whether you have a question or just want to say hi,
        I'll try my best to get back to you!
      </p>
      
      <!-- Botão de E-mail -->
      <div class="pt-4">
        <ContactButton email={siteConfig.email} />
      </div>
      
      <!-- Informações adicionais (opcional) -->
      <div class="pt-8 border-t border-amber-200 dark:border-neutral-700">
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          I typically respond within 24-48 hours
        </p>
      </div>
    </div>
  </Container>
</section>