---
import Container from "./Container.astro";
import ProfileImage from "./ui/ProfileImage.astro";
import SocialMediaContainer from "./ui/SocialMediaContainer.astro";
---

<section 
  id="hero" 
  class="min-h-screen grid place-items-center bg-amber-300 px-6 py-12"
  role="region" 
  aria-label="Hero Section"
>
  <Container class="mx-auto w-full max-w-7xl">
    <div class="flex flex-col-reverse items-center gap-8 md:flex-row">
      <!-- Text Content -->
      <article class="w-full space-y-6 md:w-1/2">
        <h1 class="text-6xl font-extrabold tracking-tight sm:text-7xl">
          Hi, my name is <span class="text-amber-600">Tiago</span>
        </h1>

        <div class="space-y-4">
          <h2 class="text-2xl font-bold sm:text-3xl">
            Software Engineer | Java, Spring Boot & RESTful API
          </h2>
          <p class="text-lg leading-relaxed sm:text-xl">
            Specialist in RESTful API development with Java 17 and Spring Boot, 
            applying SOLID principles, automated testing, and best practices.
          </p>
        </div>

        <SocialMediaContainer />
      </article>

      <!-- Profile Image -->
      <ProfileImage />
    </div>
  </Container>

  <!-- Scroll Button -->
  <button
    id="scroll-down-btn"
    class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce rounded-md border-2 border-white bg-amber-500 p-3 text-neutral-900 shadow-lg transition-all hover:scale-105 hover:bg-amber-600 hover:shadow-amber-500/20 focus:outline-none focus:ring-2 focus:ring-amber-400 dark:border-neutral-900"
    aria-label="Scroll down"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      aria-hidden="true"
      class="size-6 fill-current dark:fill-neutral-100"
    >
      <path fill="currentColor" d="M16.939 7.939 12 12.879l-4.939-4.94-2.122 2.122L12 17.121l7.061-7.06z" />
    </svg>
  </button>
</section>