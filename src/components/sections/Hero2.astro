---
import Container from "../../layouts/Container.astro";
import ProfileImage from "../ui/ProfileImage.astro";
import SocialMediaContainer from "../ui/SocialMediaContainer.astro";
import StatusBadge from "../ui/StatusBadge.astro";
import TechStackTags from "../ui/TechStackTags.astro";
import siteConfig from "../../data/site-config.json";
---

<section 
  id="hero" 
  class="relative min-h-screen grid place-items-center bg-gradient-to-br from-amber-300 via-amber-400 to-amber-500 px-6 py-12 overflow-hidden"
  role="region" 
  aria-label="Hero Section"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-20 w-72 h-72 bg-white rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
    <div class="absolute top-40 right-20 w-72 h-72 bg-amber-200 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-2000"></div>
    <div class="absolute -top-4 left-1/2 w-72 h-72 bg-yellow-200 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-4000"></div>
  </div>

  <Container class="relative z-10 mx-auto w-full max-w-7xl">
    <div class="flex flex-col-reverse items-center gap-12 md:flex-row md:gap-16">
      
      <!-- Text Content -->
      <article class="w-full space-y-8 md:w-1/2">
        <!-- Status Badge -->
        <StatusBadge />

        <!-- Main Heading -->
        <div class="space-y-4">
          <h1 class="text-5xl font-extrabold tracking-tight text-neutral-900 sm:text-6xl lg:text-7xl">
            Hi, I'm <span class="relative">
              <span class="text-amber-800">{siteConfig.name}</span>
              <div class="absolute -bottom-2 left-0 right-0 h-3 bg-amber-600/30 -skew-x-12 rounded"></div>
            </span>
          </h1>
          
          <div class="w-20 h-1 bg-amber-800 rounded-full"></div>
        </div>

        <!-- Role & Specialization -->
        <div class="space-y-4">
          <h2 class="text-2xl font-bold text-neutral-800 sm:text-3xl lg:text-4xl">
            {siteConfig.title}
          </h2>
          
          <!-- Tech Stack Tags -->
          <TechStackTags technologies={siteConfig.techstack} />
          
          <p class="text-lg leading-relaxed text-neutral-800 sm:text-xl max-w-lg">
            Building robust and scalable applications with <strong class="text-amber-800">clean architecture</strong>, 
            SOLID principles, and comprehensive testing strategies.
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
          <a 
            href="#contact" 
            class="inline-flex items-center justify-center gap-2 rounded-xl bg-neutral-900 px-8 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:scale-105 hover:shadow-xl hover:shadow-neutral-900/25 focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:ring-offset-2"
          >
            {siteConfig.hero.cta_primary}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M7 17l9.2-9.2M17 17V7H7"/>
            </svg>
          </a>
          
          <a 
            href="#about" 
            class="inline-flex items-center justify-center gap-2 rounded-xl bg-white/80 backdrop-blur-sm px-8 py-4 text-lg font-semibold text-neutral-900 shadow-lg transition-all hover:scale-105 hover:bg-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2"
          >
            {siteConfig.hero.cta_secondary}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M6 9l6 6 6-6"/>
            </svg>
          </a>
        </div>

        <!-- Social Media -->
        <div class="pt-4 relative z-20 sm:z-auto">
          <SocialMediaContainer socialMediaLinks={siteConfig.social}/>
        </div>
      </article>

      <!-- Profile Image -->
      <div class="relative w-full md:w-1/2">
        <div class="relative">
          <!-- Decorative Elements -->
          <div class="absolute -top-4 -left-4 w-full h-full bg-white/20 rounded-2xl backdrop-blur-sm"></div>
          <div class="absolute -bottom-4 -right-4 w-full h-full bg-amber-600/20 rounded-2xl"></div>
          
          <!-- Profile Image Container -->
          <div class="relative z-10">
            <ProfileImage imageLinks={{
              author: siteConfig.images.author,
              name: siteConfig.name
            }}/>
          </div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Enhanced Scroll Button -->
  <div class="fixed bottom-2 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 z-10 sm:absolute sm:bottom-8 sm:z-auto">
    <span class="text-sm font-medium text-neutral-800 hidden sm:block">Scroll to explore</span>
    <button
      id="scroll-down-btn"
      class="group rounded-full bg-white/90 backdrop-blur-sm p-2 text-neutral-900 shadow-lg transition-all hover:scale-110 hover:bg-white hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 border border-white/50 sm:p-4 sm:bg-white/80"
      aria-label="Scroll down to next section"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-4 h-4 animate-bounce group-hover:animate-pulse sm:w-6 sm:h-6"
      >
        <path d="M6 9l6 6 6-6"/>
      </svg>
    </button>
  </div>

  <!-- Floating Elements -->
  <div class="absolute top-1/4 right-10 hidden lg:block">
    <div class="flex flex-col items-center gap-4 text-neutral-800/60">
      <div class="w-px h-16 bg-neutral-800/20"></div>
      <span class="text-sm font-medium -rotate-90 whitespace-nowrap">{siteConfig.title}</span>
      <div class="w-px h-16 bg-neutral-800/20"></div>
    </div>
  </div>
</section>

<style>
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
