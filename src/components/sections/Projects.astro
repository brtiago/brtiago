---
import Container from "../../layouts/Container.astro";
import HorizontalCard from "../ui/Card.astro";
import projects from "../../data/projects.json";
import siteConfig from "../../data/site-config.json";
---

<section id="projects" class="py-20 bg-white dark:bg-neutral-900">
  <Container class="max-w-7xl mx-auto">
    <div class="space-y-12">
      <!-- Header da Seção -->
      <div class="text-center space-y-4">
        <h2 class="text-4xl md:text-5xl font-extrabold text-amber-600 dark:text-amber-400">
          Featured Projects
        </h2>
        <div class="w-24 h-1 bg-amber-500 mx-auto rounded-full"></div>
        <p class="text-xl text-neutral-600 dark:text-neutral-300 max-w-3xl mx-auto leading-relaxed">
          Here are some of my recent projects that showcase my skills in web development, 
          from full-stack applications to specialized tools and services.
        </p>
      </div>

      <!-- Grid de Projects -->
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="transform hover:-translate-y-2 transition-transform duration-300">
            <HorizontalCard 
              title={project.title}
              img={project.img}
              desc={project.desc}
              url={project.url}
              technologies={project.technologies}
              githubUrl={project.githubUrl}
              demoUrl={project.demoUrl}
            />
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      
    </div>
  </Container>
</section>