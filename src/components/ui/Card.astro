---
interface Props {
  title: string;
  img: string;
  desc: string;
  url: string;
  technologies?: string[];
  githubUrl?: string;
  demoUrl?: string;
}

const { title, img, desc, url, technologies = [], githubUrl, demoUrl } = Astro.props;
---

<div class="group bg-white dark:bg-neutral-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-amber-100 dark:border-neutral-700 hover:border-amber-300 dark:hover:border-amber-500 h-full flex flex-col">
  <!-- Container da Imagem -->
  <div class="relative overflow-hidden">
    <img 
      src={img} 
      alt={title}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
    />
    

    
    <!-- Overlay Gradient -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>
  
  <!-- Conteúdo do Card -->
  <div class="p-6 space-y-4 flex-1 flex flex-col">
    <!-- Título -->
    <h3 class="text-xl font-bold text-neutral-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors duration-200">
      <a href={url} class="hover:underline">
        {title}
      </a>
    </h3>
    
    <!-- Descrição -->
    <p class="text-neutral-600 dark:text-neutral-300 text-sm leading-relaxed line-clamp-3 flex-1">
      {desc}
    </p>
    
    <!-- Technologies -->
    {technologies.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-auto">
        {technologies.map((tech) => (
          <span class="bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 text-xs font-medium px-2 py-1 rounded-md border border-amber-200 dark:border-amber-700/50">
            {tech}
          </span>
        ))}
      </div>
    )}
    
    <!-- Separador -->
    <div class="w-full h-px bg-amber-200 dark:bg-neutral-700"></div>
    
    <!-- Footer com Links -->
    <div class="flex items-center justify-between pt-2">
      <!-- Links de Ação -->
      <div class="flex items-center space-x-3">
        <!-- GitHub Link -->
        {githubUrl && (
          <a 
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-lg bg-neutral-100 dark:bg-neutral-700 hover:bg-amber-100 dark:hover:bg-amber-900/30 text-neutral-600 dark:text-neutral-300 hover:text-amber-600 dark:hover:text-amber-400 transition-all duration-200 group/github"
            aria-label="View source code on GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
        
        <!-- Demo Link -->
        {demoUrl && (
          <a 
            href={demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-amber-500/25 focus:ring-2 focus:ring-amber-400 focus:ring-offset-2 dark:focus:ring-offset-neutral-800"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Demo
          </a>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>