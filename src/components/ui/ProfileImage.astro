---
interface Props {
    imageLinks?: {
        author?: string;
        name?: string;
    } 
}

const { imageLinks = {} } = Astro.props;
---
<div class="w-full md:w-1/2">
  {imageLinks.author && (
    <img
      src={imageLinks.author}
      alt={`${imageLinks.name}'s Profile Photo`}
      width="256"
      height="256"
      class="mx-auto size-64 rounded-full border-4 border-amber-500 object-cover shadow-lg shadow-amber-200/50 transition-transform hover:scale-105 dark:border-amber-400 dark:shadow-amber-900/30"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
  )}
  </div>