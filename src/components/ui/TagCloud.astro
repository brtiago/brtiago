---
interface Props {
  technologies?: string[];
}

const { technologies = [] } = Astro.props;
---
{technologies.length > 0 && technologies.map((tech) => ( 
  <span class="inline-flex items-center rounded-full bg-amber-100 px-3 py-1 text-sm font-medium text-amber-800 hover:bg-amber-200 transition-colors">
    {tech}
  </span>   
))}