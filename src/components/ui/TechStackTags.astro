---
interface Props {
  technologies?: string[];
}

const { technologies = [] } = Astro.props;
---

{technologies.length > 0 && (
<div class="flex flex-wrap gap-2">
    {technologies.map((tech) =>(
    <span class="inline-flex items-center rounded-lg bg-white/80 backdrop-blur-sm px-3 py-1 text-sm font-semibold text-amber-800 shadow-sm">
      {tech}
    </span>
))}
 </div>
)}